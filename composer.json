{
  "name": "fortalece-pse/fpse-core",
  "description": "Core plugin for Fortalece PSE institutional registration and event tracking",
  "type": "wordpress-plugin",
  "version": "1.0.0",
  "authors": [
    {
      "name": "Fortalece Team",
      "url": "https://fortalecepse.org"
    }
  ],
  "license": "GPL-3.0-or-later",
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "giorgiosironi/eris": "^0.14.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "FortaleceePSE\\Core\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite unit",
    "test:property": "phpunit --testsuite property",
    "post-install-cmd": [
      "php -r \"echo 'FPSE Core plugin installed successfully!\\n';\""
    ]
  }
}
